{% extends "includes/base.twig" %}

{% block corps %}
    <div class="classement-container">
        <h1>Classement des restaurants CROUS</h1>
        <table class="classement-table">
            <thead>
            <tr>
                <th>Nom du restaurant</th>
                <th>Moyenne des avis</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for restaurant in restaurants %}
                <tr>
                    <td>{{ restaurant.nom }}</td>
                    <td>
                        <!-- Affichage de la moyenne des avis avec des Ã©toiles -->
                        <div class="Stars" style="--rating: {{ restaurant.moyenneAvis }}" title="Note : {{ restaurant.moyenneAvis }} sur 5">
                        </div>
                    </td>
                    <td>
                        <button class="action-btn">
                            <img src="icons/details-36-512.png" alt="Voir plus">
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
